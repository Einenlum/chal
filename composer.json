{
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": "^7.1.3",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "doctrine/doctrine-migrations-bundle": "^2.0",
    "ramsey/uuid": "~3.8",
    "ramsey/uuid-doctrine": "~1.5",
    "symfony/console": "4.2.*",
    "symfony/dotenv": "4.2.*",
    "symfony/flex": "^1.1",
    "symfony/framework-bundle": "4.2.*",
    "symfony/orm-pack": "^1.0",
    "symfony/validator": "4.2.*",
    "symfony/yaml": "4.2.*"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "paragonie/random_compat": "2.*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "test": [
      "phpstan analyse --level=7 src",
      "phpspec run --format pretty --ansi"
    ],
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "4.2.*"
    }
  },
  "require-dev": {
    "phpspec/phpspec": "~5.1",
    "phpstan/phpstan": "~0.11"
  }
}
